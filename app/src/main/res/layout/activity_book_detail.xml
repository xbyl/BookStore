<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:context="com.moliying.jzc.bookstore.ui.BookDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="8dp"
                android:background="@color/colorPrimary">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返回"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimary"
                    android:id="@+id/button_return"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="商品详情"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/main_navigation_car_checked"
                    android:id="@+id/imageView_shopping_cart"
                    android:clickable="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <com.moliying.jzc.bookstore.view.MyImageIndicatorView
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:id="@+id/image_indicater_view"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="现价"
                    android:textSize="20sp"
                    android:textColor="@color/current_price"
                    android:id="@+id/textView_current_price"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="原价"
                    android:id="@+id/textView_original_price"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="折扣"
                    android:background="@color/current_price"
                    android:textColor="@android:color/white"
                    android:id="@+id/textView_discount"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:padding="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="书名"
                        android:id="@+id/textView_bookName"/>
                    <TextView
                        android:padding="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="作者"
                        android:id="@+id/textView_author"/>
                </LinearLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加入购物车"
                    android:textColor="@color/white"
                    android:id="@+id/button_add_shopping_cart"
                    android:background="@drawable/bt_bg_red"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/login_line"/>
            <LinearLayout
                android:id="@+id/layout_comment_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="8dp"
                android:orientation="horizontal"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_comment_count"
                    android:text="商品评价 (共有0条评论)"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/login_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/imageView_book_pic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    fresco:placeholderImage="@mipmap/de_default_portrait"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/textView_username"
                    android:text="***"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/textView_star_count"
                    android:text="无"/>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/ratingBar"
                    style="@style/mySmallRatingBar"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="1"
                    android:rating="0"/>
            </LinearLayout>
            <TextView
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_comment_content"
                android:text="亲,本书还没有评价"
                android:singleLine="true"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/login_line"/>
            <com.astuetz.PagerSlidingTabStrip
                android:id="@+id/PagerSlidingTabStrip_detail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:pstsTextAllCaps="false"
                app:pstsShouldExpand="true"
                app:pstsIndicatorColor="@color/colorPrimary"
                app:pstsIndicatorHeight="2dp"
                app:pstsUnderlineHeight="1dp"
                app:pstsDividerColor="@android:color/darker_gray"
                />
            <com.moliying.jzc.bookstore.view.MyViewPager
                android:layout_width="match_parent"
                android:layout_height="560dp"
                android:id="@+id/view_pager_detail"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
